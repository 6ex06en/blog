@import "bootstrap-sprockets";
@import "bootstrap";

$blog_bg: white;

body {
  background: url('<%= asset_path "bg.jpg" %>');
  background-attachment: fixed;
  padding: 5px 0;
}

.container {
  background: $blog_bg;
  border: 1px solid grey;
  border-radius: 10px;
}

main {
  min-height: 75vh;
}

.page-header {
  height: 15vh;

  .header {
    font-size: 3.5em;

    a {
      text-decoration: none;
    }
  }
}

.sign__container {
  background: $blog_bg;

  .sign__links {
    display: inline-block;
    padding-right: 20px;
    font-size: 1.1em;

    a, span {
      margin-right: 20px;
    }
  }
}
.form-danger {
  padding: 5px;
  margin-bottom: 5px;
}

.flash {
  div {
    display: inline-block;
  }
}

footer {
  margin: 0 -15px;
  padding: 0 15px;
  line-height: 2.5;
  background: #AFAEAE;
  border-radius: 3px;
  text-align: right;
  font-weight: bold;
}
